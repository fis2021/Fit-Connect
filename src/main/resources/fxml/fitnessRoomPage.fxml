<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane id="fitnessRoomPage" alignment="center" hgap="10" prefHeight="400" prefWidth="600" vgap="10" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.loose.fis.sre.controllers.FitnessRoomPageController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
    </rowConstraints>
    <children>
        <Button fx:id="addAntrenament" onAction="#handleAddAntrenamentAction" text="Adaugă clasă de antrenament" GridPane.columnIndex="1" />
        <Button fx:id="editAntrenament" onAction="#handleEditAntrenamentAction" text="Editează clasă de antrenament" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <Button fx:id="deleteAntrenament" onAction="#handleDeleteAntrenamentAction" text="Șterge clasă de atrenament" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        <Button fx:id="viewReservations" onAction="#handleViewReservationsAction" text="Vezi rezervarile" GridPane.columnIndex="1" GridPane.rowIndex="3" />
        <Button fx:id="logout" alignment="bottom_right" contentDisplay="CENTER" onAction="#handleLogoutAction" text="Logout" textAlignment="CENTER" GridPane.columnIndex="0" GridPane.rowIndex="3">
         <GridPane.margin>
            <Insets left="50.0" />
         </GridPane.margin></Button>
    </children>
</GridPane>
